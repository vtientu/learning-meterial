    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SendMailServletController</servlet-name>
        <url-pattern>/sendmail</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
